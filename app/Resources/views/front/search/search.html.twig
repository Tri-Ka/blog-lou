<div class="widget-item widget_search">
	{{ form_start(form, { attr: { class: 'form', action: path('content_search') } }) }}
	    <div class="input-group">
	      {{ form_widget(form.content, {attr: {'class' : 'form-control', 'placeholder' : 'Rechercher ...'}}) }}

	      <span class="input-group-btn">
	        <button class="btn btn-secondary" type="submit">
	        	<i class="fas fa-search"></i>
	        </button>
	      </span>
	    </div>
	{{ form_end(form) }}
</div>
