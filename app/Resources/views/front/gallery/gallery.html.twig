{% extends 'front/layout.html.twig' %}

{% block body %}
	<div class="container container--main">
		<div class="gallery-container">
			<h1 class="blog-post__title mt-5">
				{{ 'Gallerie' }}
			</h1>

			<div class="row grid pictures-list">
				{% for picture in pictures %}
		        	<div class="col-xs-12 col-sm-12 col-md-4 grid-item mb-5">
		        		<a class="picture-link" href="#" data-toggle="modal" data-target="#modal-picture-{{ picture.id }}">
		        			<img src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('gallery_thumb') }}" width="100%">
		        		</a>
		        	</div>
	        	{% endfor %}
	        </div>

	        {% include 'front/common/pagination.html.twig' %}
		</div>
	</div>

	{% for picture in pictures %}
		<div class="modal fade" id="modal-picture-{{ picture.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-lg" role="document">
		    	<div class="modal-content modal-content--gallery">
		    		<h3>
		    			{{ picture.title }}
		    		</h3>

		    		<a href="{{ vich_uploader_asset(picture, 'imageFile') }}" target="_blank">
		    			<img data-load-later data-src="{{ vich_uploader_asset(picture, 'imageFile') }}" width="100%" />
					</a>

	      			<p>
	      				{{ picture.content }}
	      			</p>
		    	</div>
		  	</div>
		</div>
	{% endfor %}
{% endblock %}
