{% extends 'front/layout.html.twig' %}

{% block body %}
	<div class="header">
		<div class="header__title text-center">
            <h1>
               le Blog de Lou
            </h1>

            <h3>
                Un blog qu'il est bien
            </h3>
        </div>
	</div>

	<div class="container container--main">
		<div class="tags-container">
			<ul class="tags-list">
				<li>
					<a href="#" class="btn-round active">
						All
					</a>
				</li>

				{% for tag in tags %}
					<li>
						<a href="#" class="btn-round">
							{{ tag }}
						</a>
					</li>
				{% endfor %}
			</ul>
		</div>

		<div class="row">
			<div class="col-sm-9 col-xs-12">
				<div class="row grid articles-list">
					{% for article in articles %}
			        	<div class="col-xs-12 col-sm-6 grid-item mb-4 mt-1">
			        		<div class="card">
			        			{% if article.image %}
  									<div class="card-img-top" style="background-image: url({{ vich_uploader_asset(article, 'imageFile') }})" data-holder-rendered="true"></div>
  								{% endif %}

  								<div class="card-block">
  									<div class="card-date">
  										{{ article.createdAt|date("d/m/Y") }}
  									</div>

  									<a href="#" class="card-link">
    									<h4 class="card-title">{{ article.title }}</h4>
    								</a>

    								<p class="card-text">
    									{{ article.content|striptags('<br>')|truncate(200) }}
    								</p>

    								{% if article.htags %}
	    								<div class="card-tags">
	    									<ul>
	    										{% for tag in article.htagsArray %}
	    											<li>
	    												<a href="#" class="">
	    													{{ tag }}
	    												</a>
	    											</li>
	    										{% endfor %}
	    									</ul>
	    								</div>
    								{% endif %}

    								<a href="#" class="card-comments">
                    					<i class="fa fa-comment-o"></i>0
                                    </a>
  								</div>
							</div>
			        	</div>
		        	{% endfor %}
		        </div>
			</div>

			<div class="col-sm-3 col-xs-12">
				<div class="last-articles">
					<h3>Derniers posts</h3>

					<ul>
						{% for article in lastArticles %}
							<li>
								<div class="last-article">
									<a href="#" class="last-article__img" style="background-image: url({{ vich_uploader_asset(article, 'imageFile') }})"></a>

									<div class="last-article__content">
										<span class="last-article__content__tags">
						            		{% for tag in article.htagsArray %}
												<a href="#" class="">
													{{ tag }}
												</a>
    										{% endfor %}
						            	</span>

										<a href="#">
											<h6>{{ article.title }}</h6>
										</a>
									</div>
								</div>
							</li>
						{% endfor %}
					</ul>
				</div>

				<div class="widget-item widget_search">
		            <form method="get" class="search-form" action="#">
		                <div class="input-group">
					      <input type="text" class="form-control" placeholder="Rechercher ...">
					      <span class="input-group-btn">
					        <button class="btn btn-secondary" type="button">
					        	<i class="fa fa-search"></i>
					        </button>
					      </span>
					    </div>
		            </form>
		        </div>

				<div class="popular-tags">
					<h3 class="widget-title">
						Popular tags
					</h3>

					<ul class="popular-tags__list">
						{% for tag in popularTags %}
							<li>
								<a href="#" class="tag-link">
									{{ tag }}
								</a>
							</li>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
