{% extends 'admin/layout.html.twig' %}

{% block main %}
	<ol class="breadcrumb">
	    <li class="breadcrumb-item">
	        <a href="{{ path('admin_article_list') }}">Articles</a>
	    </li>

	    <li class="breadcrumb-item active">Liste</li>
	</ol>

	<div class="card mb-3">
        <div class="card-header">
          	<i class="fas fa-list-ul"></i> Liste des articles

          	<div class="float-right">
          		<a href="{{ path('admin_article_new') }}" class="btn btn-sm btn-primary">
          			Ajouter <i class="fas fa-plus"></i>
          		</a>
          	</div>
		</div>

        <div class="card-body">
			<div class="table-responsive">
            	<table class="table table-bordered table-striped table-hover" data-tablesorted>
              		<thead>
                		<tr>
                  			<th>#</th>
							<th>Titre</th>
							<th>Créé le</th>
							<th>Actions</th>
                		</tr>
              		</thead>

              		<tfoot>
                		<tr>
							<th>#</th>
							<th>Titre</th>
							<th>Créé le</th>
							<th>Actions</th>
                		</tr>
              		</tfoot>

              		<tbody>
              			{% for article in articles %}
	                		<tr>
								<td>{{ article.id }}</td>
								<td>{{ article.title }}</td>
								<td>{{ article.createdAt|date("d/m/Y H:i:s") }}</td>
								<td>
									<a href="{{ path('admin_article_del', {'id' : article.id}) }}" class="btn btn-sm btn-danger">
										<i class="far fa-trash-alt"></i>
									</a>

									<a href="{{ path('admin_article_edit', {'id' : article.id}) }}" class="btn btn-sm btn-primary">
										<i class="far fa-edit"></i>
									</a>
								</td>
	                		</tr>
                		{% endfor %}
              		</tbody>
            	</table>
          	</div>
        </div>
	</div>
{% endblock %}
