{% extends 'admin/layout.html.twig' %}

{% block main %}
	<ol class="breadcrumb">
	    <li class="breadcrumb-item">
	        <a href="{{ path('admin_category_list') }}">Categories</a>
	    </li>

	    <li class="breadcrumb-item active">Liste</li>
	</ol>

	<div class="card mb-3">
        <div class="card-header">
          	<i class="fa fa-table"></i> Liste des categories

          	<div class="pull-right">
          		<a href="{{ path('admin_category_new') }}" class="btn btn-sm btn-primary">
          			Ajouter <i class="fa fa-plus"></i>
          		</a>
          	</div>
		</div>

        <div class="card-body">
			<div class="table-responsive">
            	<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              		<thead>
                		<tr>
                  			<th>id</th>
							<th>nom</th>
							<th>Actions</th>
                		</tr>
              		</thead>

              		<tfoot>
                		<tr>
							<th>id</th>
							<th>nom</th>
							<th>Actions</th>
                		</tr>
              		</tfoot>

              		<tbody>
              			{% for category in categories %}
	                		<tr>
								<td>{{ category.id }}</td>
								<td>{{ category.name }}</td>
								<td>
									<a href="{{ path('admin_category_del', {'id' : category.id}) }}" class="btn btn-sm btn-danger">
										<i class="fa fa-trash"></i>
									</a>

									<a href="{{ path('admin_category_edit', {'id' : category.id}) }}" class="btn btn-sm btn-primary">
										<i class="fa fa-pencil"></i>
									</a>
								</td>
	                		</tr>
                		{% endfor %}
              		</tbody>
            	</table>
          	</div>
        </div>
	</div>
{% endblock %}
