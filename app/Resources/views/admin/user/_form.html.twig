{{ form_start(form, { attr: { class: 'form' } }) }}
    <div class="card-body">
	    {{ form_errors(form) }}

		<div class="row">
			<div class="col-xs-12 col-sm-6">
				<div class="form-group">
					{{ form_row(form.username, {
				        label: 'user.form.username',
				        attr: {'class' : 'form-control'}
				    }) }}
				</div>

				<div class="form-group">
					{{ form_row(form.email, {
				        label: 'user.form.email',
				        attr: {'class' : 'form-control'}
				    }) }}
				</div>

				<div class="form-group">
					{{ form_row(form.enabled, {
				        label: 'user.form.enabled',
				        attr: {'class' : 'form-control'}
				    }) }}
				</div>

				<div class="form-group">
					{{ form_row(form.roles, {
				        label: 'user.form.roles',
				        attr: {'class' : 'form-control'}
				    }) }}
				</div>
			</div>

			<div class="col-xs-12 col-sm-6">
				<div class="form-group">
					{{ form_row(form.plainPassword.first, {
				        label: 'user.form.password',
				        attr: {'class' : 'form-control'}
				    }) }}
				</div>

				<div class="form-group">
					{{ form_row(form.plainPassword.second, {
				        label: 'user.form.re-password',
				        attr: {'class' : 'form-control'}
				    }) }}
				</div>
			</div>
		</div>

    </div>

    <div class="card-footer text-right">
    	<a href="{{ url('admin_user_list') }}" class="btn btn-default">
            <i class="fas fa-undo"></i>
            {{ 'admin.form.cancel'|trans }}
        </a>

        <button type="submit" class="btn btn-primary">
            <i class="far fa-save"></i>
            {{ 'admin.form.save'|trans }}
        </button>
    </div>
{{ form_end(form) }}
